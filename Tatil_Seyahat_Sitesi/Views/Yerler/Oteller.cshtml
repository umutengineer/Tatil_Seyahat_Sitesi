@using Tatil_Seyahat_Sitesi.Models.Class
@{
    ViewBag.Title = "Oteller";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<!DOCTYPE HTML>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Easy-Trip | İletişim</title>
    <link rel="stylesheet" href="css/style.css" type="text/css" />
    <link href="css/slider.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <div class="content">
        <div class="wrap">
            <div class="about">
                <h3>En iyi Oteller</h3>


                <style>
                    .card {
                        border: 1px solid #ddd;
                        border-radius: 10px;
                        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    }

                        .card:hover {
                            transform: scale(1.02);
                            transition: all 0.3s ease;
                        }

                    .btn-darkred {
                        background-color: #9a2f53;
                        border-color: #9a2f53;
                        color: white;
                    }

                        .btn-darkred:hover {
                            background-color: #9a2f53;
                            border-color: #9a2f53;
                        }

                    .description {
                        max-height: 100px; /* Yüksekliği kısıtlayarak fazla metni gizleyin */
                        overflow: hidden; /* Fazla metni gizleyin */
                        text-overflow: ellipsis; /* '...' ekleyerek metnin bittiğini belirtin */
                    }

                    .description-full {
                        max-height: none; /* Açıklama tamamlandığında sınırlamayı kaldırın */
                        overflow: visible;
                    }

                    .btn-toggle-description {
                        cursor: pointer;
                        color: #9a2f53;
                        text-decoration: underline;
                    }
                </style>



                <div class="container mt-4">
                    <div class="row row-cols-1 row-cols-md-3 g-2">

                        <br />   <br />
                        @foreach (var hotel in Model)
                        {
                            <div class="col">
                                <div class="card h-100">
                                    <img src="@hotel.ImageUrl" class="card-img-top" alt="@hotel.Name" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">@hotel.Name</h5>
                                        <p class="card-text">
                                            <strong><span style="color: #9a2f53;">Adres:</span> </strong> @hotel.Location<br />
                                            <strong><span style="color: #9a2f53;">Bilgi:</span></strong>
                                            <!-- Kısa açıklama görünür -->
                                            <span class="description" id="description-@hotel.Id" style="display: block;">@hotel.Description.Substring(0, 75)...</span>
                                            <!-- Tam açıklama gizli -->
                                            <span class="description-full" id="description-full-@hotel.Id" style="display:none;">@hotel.Description</span>
                                            <br />
                                            <strong><span style="color: #9a2f53;">Fiyat:</span></strong> @hotel.Price $
                                        </p>

                                        <!-- "Devamını Oku" ve "Kapat" butonları -->
                                        <button class="btn-toggle-description" onclick="toggleDescription('@hotel.Id', this)">Devamını Oku</button>
                                    </div>
                                    <div class="card-footer text-center">
                                        <a href="#" class="btn btn-darkred">Fiyatları İncele</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <script>
                    function toggleDescription(hotelId, btn) {
                        var description = document.getElementById('description-' + hotelId);
                        var fullDescription = document.getElementById('description-full-' + hotelId);

                        // Eğer açıklama kısaysa, tam açıklamayı göster
                        if (description.style.display === 'none') {
                            description.style.display = 'block';  // kısa açıklamayı göster
                            fullDescription.style.display = 'none';  // tam açıklamayı gizle
                            btn.innerText = 'Devamını Oku';  // buton metnini değiştir
                        } else {
                            description.style.display = 'none';  // kısa açıklamayı gizle
                            fullDescription.style.display = 'block';  // tam açıklamayı göster
                            btn.innerText = 'Kapat';  // buton metnini değiştir
                        }
                    }
                </script>


            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <p>&copy; 2025 Easy-Trip. All Rights Reserved | Design by <a href="http://w3layouts.com">W3Layouts</a></p>
    </div>

</body>
</html>



@model Tatil_Seyahat_Sitesi.Models.Class.Contact
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Easy-Trip | İletişim</title>
    <link rel="stylesheet" href="css/style.css" type="text/css" />
    <link href="css/slider.css" rel="stylesheet" type="text/css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        .contact {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

            .contact h3 {
                text-align: center;
                color: #900C3F;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #333;
            }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .btn-primary {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #900C3F;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #7c092e;
            }

        .address-section {
            margin-top: 30px;
        }

            .address-section p {
                margin: 5px 0;
                color: #555;
            }

            .address-section a {
                color: #900C3F;
                text-decoration: none;
            }

        .map-section iframe {
            width: 100%;
            height: 350px;
            border: 0;
            border-radius: 8px;
        }

        .footer-bottom {
            text-align: center;
            margin-top: 20px;
            color: #777;
        }
    </style>
</head>
<body>

    <div class="contact">
        <h3>İletişim Bilgileri</h3>
        
        @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.AdSoyad, "Ad Soyad")
                @Html.TextBoxFor(m => m.AdSoyad, new { @class = "form-control", placeholder = "Adınız ve Soyadınız" })
                @Html.ValidationMessageFor(m => m.AdSoyad)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Mail, "E-posta")
                @Html.TextBoxFor(m => m.Mail, new { @class = "form-control", placeholder = "E-posta adresiniz", type = "email" })
                @Html.ValidationMessageFor(m => m.Mail)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Konu, "Konu")
                @Html.TextBoxFor(m => m.Konu, new { @class = "form-control", placeholder = "Mesajınızın konusu" })
                @Html.ValidationMessageFor(m => m.Konu)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Mesaj, "Mesajınız")
                @Html.TextAreaFor(m => m.Mesaj, new { @class = "form-control", rows = 5, placeholder = "Mesajınızı yazınız..." })
                @Html.ValidationMessageFor(m => m.Mesaj)
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        }

        <div class="address-section">
            <h3>Adres:</h3>
            <p>Telefon: +90 553 989 80 71</p>
            <p>Fax: 1-22-5555</p>
            <p>Email: <a href="mailto:umka@gmail.com">umka@gmail.com</a></p>
            <br />
            <h3>İkinci Adres:</h3>
            <p>Telefon: 1-22-5555</p>
            <p>Fax: 1-22-5555</p>
            <p>Email: <a href="mailto:perizatsagynbekova@mail.com">perizatsagynbekova@mail.com</a></p>
        </div>

        <div class="map-section">
            <h3>Konum:</h3>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.9140102540455!2d-121.92503432356284!3d37.76861441251417!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fedf51c9874ef%3A0xd35a30d37e3e1fcc!2sRashelle%20Way%2C%20San%20Ramon%2C%20CA%2094582!5e0!3m2!1sru!2sus!4v1736682025823!5m2!1sru!2sus" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>

    <div class="footer-bottom">
        <p>&copy; 2025 Easy-Trip. All Rights Reserved | Design by <a href="http://w3layouts.com">W3Layouts</a></p>
    </div>

</body>
</html>